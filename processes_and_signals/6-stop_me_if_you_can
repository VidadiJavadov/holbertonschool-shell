#!/usr/bin/env bash
#comment

TARGET_PROCESS_NAME="4-to_infinity_and_beyond"

# Use pkill to send the default TERM signal (15) to the process.
# The 'if' statement directly checks pkill's exit status.
if pkill "$TARGET_PROCESS_NAME"; then
    echo "Attempted to stop '$TARGET_PROCESS_NAME' process."
else
    echo "Could not find or stop '$TARGET_PROCESS_NAME' process."
fi
